# localhost records
127.0.0.1 localhost.localdomain localhost
# IPv6 only records
::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts

# Inventory IPv4 records
{% for host in groups['all'] %}
{% if hostvars[host].ansible_default_ipv4.address is defined %}
{{ hostvars[host].ansible_default_ipv4.address }} {{ host }}
{% endif %}
{% endfor %}

# Inventory IPv6 records
{% for host in groups['all'] %}
{% if hostvars[host].ansible_default_ipv6.address is defined %}
{{ hostvars[host].ansible_default_ipv6.address }} {{ host }}
{% endif %}
{% endfor %}
